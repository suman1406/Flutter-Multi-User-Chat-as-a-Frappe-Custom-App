{
    "name": "Chat",
    "module": "Chat",
    "doctype": "DocType",
    "is_submittable": 0,
    "track_changes": 1,
    "engine": "InnoDB",
    "sort_field": "modified",
    "sort_order": "DESC",
    "fields": [
        {
            "fieldname": "chat_name",
            "fieldtype": "Data",
            "label": "Chat Name",
            "reqd": 1,
            "in_list_view": 1
        },
        {
            "fieldname": "chat_type",
            "fieldtype": "Select",
            "label": "Chat Type",
            "options": "Direct\nGroup",
            "default": "Direct",
            "reqd": 1
        },
        {
            "fieldname": "participants_section",
            "fieldtype": "Section Break",
            "label": "Participants"
        },
        {
            "fieldname": "participants",
            "fieldtype": "Table",
            "label": "Participants",
            "options": "Chat Participant"
        },
        {
            "fieldname": "last_message",
            "fieldtype": "Text",
            "label": "Last Message",
            "read_only": 1
        },
        {
            "fieldname": "last_message_at",
            "fieldtype": "Datetime",
            "label": "Last Message At",
            "read_only": 1
        }
    ],
    "permissions": [
        {
            "role": "System Manager",
            "read": 1,
            "write": 1,
            "create": 1,
            "delete": 1
        },
        {
            "role": "Chat User",
            "read": 1,
            "write": 1,
            "create": 1,
            "if_owner": 1
        }
    ]
}